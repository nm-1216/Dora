@model List<TeachingPlanDetail>

@{
    ViewData["Title"] = "授课计划查询";
}
<div class="container-fluid">

    <form id="mainForm" class="form-inline" method="post"> 
        <div class="row" style="margin-top:15px;">
            <div class="col-lg-12">
                <table class="table-striped table">
                    <thead>
                        <tr>
                            <th>授课序号</th>
                            <th>授课方式</th>
                            <th>课时数</th>
                            <th>教学内容</th>
                            <th>教学资源</th>
                            <th>是否随堂测试</th>
                            <th>作业</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr >
                                <td>@item.Order</td>
                                <td>@item.Mode</td>
                                <td>@item.Period</td>
                                <td>@item.TeaCon</td>
                                <td>@item.Assets</td>
                                <td>@item.Test</td>
                                <td>@item.Job</td> 
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div> 
    </form>
</div>
