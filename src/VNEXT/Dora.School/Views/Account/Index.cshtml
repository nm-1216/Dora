@model IEnumerable<SchoolRole>
@{
    ViewData["Title"] = "User infomation";
    Layout = "_Layout_1";
}
<style>
    .imgbox img {
        width: 40%;
        display:block;
        margin:0 auto;
    }
    .bg1 {
/*        background-color: #e0f0e9;*/
        background-color: #f0f7f7;
/*        filter:alpha(opacity:50);*/
/*        opacity:0.5;*/
/*        -moz-opacity:0.5;*/
/*        -khtml-opacity: 0.5;*/
        margin-bottom: 20px;
    }
    .imgItem {
        padding: 20px 0 20px 0;
        text-align: center;
        /*border-bottom: 2pt solid #dddce3;*/
        font-size: 10pt;
        color: #0c3647;
        font-weight: normal;
    }

    .wapper {
        background-color: #fff;
    }

    .RoleName {
        width: 25%;
        position: absolute;
        top: -30px;
        left: -30%;
        border: 2px solid #0c3647;
        text-align: center;
        font-size: 23pt;
        color: #0c3647;
        font-weight: bold;
    }

    .ModuleType {
        text-align: left;
        padding: 20px 0 20px 20px;
        width: 23%;
        font-size: 15pt;
        color: #0c3647;
        font-weight: bold;
    }

        .ModuleType img {
            width: 40%;
            display:block;
        }
</style>
<br />
<br />
<br />
@foreach (var role in Model)
{

    <div class="container" style="width:80%;position:relative">
        <div class="RoleName" style="display: none">
            @role.Name
        </div>
        @foreach (var Permission in role.Permissions.OrderBy(b => b.ModuleType.Index))
        {
            <div class="container-fluid" style="position:relative;">
                <div class="row bg1">
                    <div class="col-sm-1 ModuleType" style="width: 23%">
                        <img src="@Permission.ModuleType.Ico" />
                        @Permission.ModuleType.Name
                    </div>
                    <div class="col-sm-11" style="width:77%">
                        <div class="container-fluid" style="position: relative;background-color: transparent">
                            <div class="row imgbox">
                                @foreach (var item in Permission.ModuleType.Modules.OrderBy(b => b.Index))
                                {
                                    <a href="@item.Url">
                                        <div class="imgItem col-lg-3 col-sm-3 col-xs-3" style="overflow: hidden">
                                            <img src="@item.Ico" />
                                            @item.Name
                                        </div>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

}
