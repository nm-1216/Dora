@model Dora.Core.PageList<PersonnelTraining>
@{
    ViewData["Title"] = "专业人才培养方案";
}

<div class="container-fluid">
    <form class="form-inline" method="post">
        <div class="row" style="padding:10px 0 20px 0;">
            <div class="col-sm-8">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">名称</div>
                        <input type="text" class="form-control" name="searchKey" value="@ViewData["searchKey"]" id="searchKey" placeholder="请输入名称">
                    </div>
                </div>

                <button type="submit" class="btn btn-info">检索</button>
            </div>

            <div class="col-sm-4 text-right">
                <a class="btn btn-success" asp-action="Create">添加</a>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <table class="table-striped table">
                    <thead>
                        <tr>
                            <th>专业</th>
                            <th>学制</th>
                            <th>培养目标</th>
                            <th>毕业要求</th>
                            <th>录取年份</th>
                            <th>创建时间</th>
                            <th>使用状态</th>
                            <th class="text-center">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Professional.Name</td>
                                <td>@item.LenOfSch</td>
                                <td>@item.TraObj</td>
                                <td>@item.GraReq</td>
                                <td>@item.Year</td>
                                <td>@item.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td><span class="@((int)item.Status==0?"label label-danger":"label label-success")">@item.Status.ToString()</span></td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.PersonnelTrainingId" class="btn btn-primary btn-xs" role="button">编辑</a>
                                    <a data-id="@item.PersonnelTrainingId" class="btn btn-danger btn-xs btn-delete" role="button">删除</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <input type="hidden" name="Page" id="Page" value="@ViewBag.Page" />
        @Html.Raw(Dora.Core.Pager.Pager1(Context.Request.Path.Value, Model.CurrPage, Model.PageSize, Model.PageCount, Model.RecordCount))
    </form>
</div>

@section scripts{
    <script>
        $(function () {
            $(".btn-delete").on('click', function () {
                var id = $(this).attr("data-id");
                layer.confirm("确认删除", ['确定', '取消'], function (i) {
                    layer.close(i);
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("Delete")",
                        data: "id="+id,
                        success: function (d) {
                            if (d.code == "200") {
                                layer.msg("删除成功！");
                                window.location.reload();
                            }
                            else {
                                layer.msg("删除失败！ " + d.msg);
                            }
                            
                        }
                    })
                }, function (i) {
                    layer.close(i);
                });

            });

        })
    </script>
}