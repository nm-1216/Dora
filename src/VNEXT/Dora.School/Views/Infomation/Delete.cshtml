@model Infomation

@{
    ViewData["Title"] = "删除信息";
}

<div class="container-fluid">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="InfomationId" />
        <div class="page-header"><h1>@Model.Title</h1></div>
        <div class="well well-lg">@Model.Summary</div>
        <div>@Html.Raw(Model.Content)</div>

        <div class="text-right" style="padding-bottom:50px;">
            <button class="btn btn-danger" style="width:120px" type="submit">确认删除</button>
        </div>
    </form>
</div>