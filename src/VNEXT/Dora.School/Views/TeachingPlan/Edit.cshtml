@model TeachingPlan
@{
    ViewData["Title"] = "教学计划维护";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="TeachingPlanId" />
                <div class="page-header">
                    <h1><small>@Model.Term</small></h1>
                </div>
                <div style="padding-bottom:15px;text-align:right">
                    <input type="submit" class="btn btn-danger btn-sm" style="width:100px" value="批量" />
                    <input type="button" class="btn btn-info btn-sm" style="width:100px" value="参照" id="btnSyllabusBook" data-content-id="@Model.TeachingPlanId" />
                </div>

                <table class="table-striped table">
                    <thead>
                        <tr>
                            <th>授课序号</th> 

                            <th class="text-right">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Detail)
                        {
                            <tr> 
                                <td>@item.Order</td> 
                                <td class="text-right"> 
                                    <a data-content-id="@item.TeachingPlanDetailId" class="btn btn-primary btn-xs btnEdit">修改</a> 
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </form>
        </div>

       
    </div>


</div>
<!--参照Start-->
<div class="DivSyllabusPeriod" style="display:none">
    <div id="myTabContent" class="tab-content">
        <form id="CreateSyllabusPeriod" asp-action="CreateSyllabusPeriod" method="post">
            <input type="hidden" name="SyllabusId" value="@Model.TeachingPlanId" />
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>单元序号：</th>
                        <th>讲授课时：</th>
                        <th>实验课时：</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input name="UnitOrdNum" class="form-control" /></td>
                        <td><input name="TeaPer" class="form-control" /></td>
                        <td><input name="ExpPer" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th colspan="3">课程内容：</th>
                        <th></th>
                    </tr>
                    <tr>
                        <td colspan="3">
                            @*<input name="CouCon" class="form-control" type="text"/>*@
                            <textarea name="CouCon" class="form-control" style="height:150px"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3" class="text-center">
                            <button class="btn btn-danger" style="width:120px" type="submit">提交</button>
                        </td>
                    </tr>
                </tbody>

            </table>
        </form>
    </div>
</div>
<!--参照End-->