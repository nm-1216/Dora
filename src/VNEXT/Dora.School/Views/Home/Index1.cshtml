@{
    ViewData["Title"] = "诊改支撑平台";
    Layout = "_Layout_1";
}

<style>
    body .demo-class .layui-layer-title {
        background: #000;
        color: #fff;
        border: none;
    }

    body .imgbox {
        padding-bottom: 10px;
    }

        body .imgbox img {
            width: 100%;
        }

    body .col-lg-1 {
        padding: 10px;
    }

    .row1>div>div {
        background:#ddd;
        height:60px;
        padding-top:8px;
        text-align:center;
    }
</style>

<h1>教研室（系）主任</h1>

<div class="container-fluid">

    <div class="row">
        <div class="col-lg-12">
            <h4><em>F1 专业人才培养方案维护</em></h4>
        </div>
    </div>
    <div class="row imgbox row1">
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div>专业人才培养方案输入</div>
            

        </div>
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div style="background:#ff6a00">人才培养方案审议
            </div>

            
        </div>
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div style="background:#ff6a00">人才培养方案查询</div>

        </div>
        
        
    </div>

    <div class="row">
        <div class="col-lg-12">
            <h4><em>F2 任务分配</em></h4>
        </div>
    </div>
    <div class="row imgbox row1">
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div>课程负责人分配(大纲编写)</div>
        </div>
        <div style="display:none" class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div>实训(课程非项目)任务分配</div>
        </div>
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div style="background:#ff6a00">校外实习任务分配</div>
        </div>
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div style="background:#ff6a00">毕业设计任务分配</div>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12">
            <h4><em>F3 实习基地信息维护</em></h4>
        </div>
    </div>
    <div class="row imgbox row1">
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div style="background:#ff6a00">实习基地信息录入	</div>
        </div>
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div style="background:#ff6a00">实习基地信息修改</div>
        </div>
        
    </div>
    	



    <div class="row">
        <div class="col-lg-12">
            <h4><em>F4 审核管理</em></h4>
        </div>
    </div>
    <div class="row imgbox row1">
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div>课程教学大纲一级审核	</div>
        </div>
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div>授课计划一级审核</div>
        </div>
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div>人才培养方案审核</div>
        </div>
    </div>
</div>


@section scripts{
    <script>
        $(function () {
            $('.logout').on('click', function () {
                layer.confirm('你确定要退出系统吗？', {
                    btn: ['确定', '取消'],
                    skin: 'demo-class'
                }, function () {
                    document.getElementById('logoutForm').submit()
                }, function () {

                });
            });
        })
    </script>
}

