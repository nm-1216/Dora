@{
    ViewData["Title"] = "诊改支撑平台";
    Layout = "_Layout_1";
}

<style>
    body .demo-class .layui-layer-title {
        background: #000;
        color: #fff;
        border: none;
    }

    body .imgbox {
        padding-bottom: 10px;
    }

        body .imgbox img {
            width: 100%;
        }

    body .col-lg-1 {
        padding: 10px;
    }

    .row1>div>div {
        background:#ddd;
        height:60px;
        padding-top:8px;
        text-align:center;
    }
</style>

<h1>分院（系）领导</h1>



<div class="container-fluid">

    <div class="row">
        <div class="col-lg-12">
            <h4><em>F1 审核管理</em></h4>
        </div>
    </div>
    <div class="row imgbox row1">
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div>人才培养方案二级审核</div>
        </div>
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div>课程教学大纲二级审核</div>
        </div>
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div>授课计划二级审核</div>
        </div>
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div>教师调课审批</div>
        </div>
    </div>
    	

    <div class="row">
        <div class="col-lg-12">
            <h4><em>F2 二级教学管理制度维护</em></h4>
        </div>
    </div>
    <div class="row imgbox row1">
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div style="background:#ff6a00">二级教学管理制度上传	</div>
        </div>
        <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
            <div style="background:#ff6a00">二级教学通知发布</div>
        </div>
    </div>
    		
</div>


@section scripts{
    <script>
        $(function () {
            $('.logout').on('click', function () {
                layer.confirm('你确定要退出系统吗？', {
                    btn: ['确定', '取消'],
                    skin: 'demo-class'
                }, function () {
                    document.getElementById('logoutForm').submit()
                }, function () {

                });
            });
        })
    </script>
}

